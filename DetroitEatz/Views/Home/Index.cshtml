            {
                List<Favorite> favList = new List<Favorite>();
                foreach (Favorite f in ViewBag.Favorites)
                {

                    favList.Add(f);
                }
                for (int i = 0; i < favList.Count; i++)
                {


                    <tr>
                        <td>Row: @i</td>
                        <td>
                            @favList[i].RestaurantName
                        </td>
                        <td>
                            @favList[i].PlaceID
                        </td>
                    </tr>

                }
            }
        </table>



    </div>
}
